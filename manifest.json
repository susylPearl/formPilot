{
  "manifest_version": 3,
  "name": "FormPilot â€“ Your Smart AI Form Assistant",
  "version": "1.0.0",
  "description": "Your Smart AI Form Assistant - Automatically detects and fills web forms using intelligent semantic matching",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/tf.min.js",
        "libs/universal-sentence-encoder.min.js",
        "ai-matcher.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "libs/tf.min.js",
        "libs/universal-sentence-encoder.min.js",
        "libs/use_model/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
